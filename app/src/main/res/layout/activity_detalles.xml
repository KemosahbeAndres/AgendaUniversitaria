<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vistas.ActivityDetalles">
  <LinearLayout
      android:id="@+id/linearLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="30dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.026">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        tools:ignore="MissingConstraints">

      <TextView
          android:id="@+id/trabText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Trabajo: "
          android:textSize="26sp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/trabSet"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="TextView"
          android:textSize="26sp" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        tools:ignore="MissingConstraints">

      <TextView
          android:id="@+id/descText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="DescripciÃ³n: "
          android:textSize="26dp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/descSet"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="TextView"
          android:textSize="26sp" />


    </LinearLayout>



  </LinearLayout>


  <LinearLayout
      android:id="@+id/linearLayout2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/linearLayout"
      android:orientation="vertical"
      android:padding="30dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/linearLayout"
      app:layout_constraintVertical_bias="0.782"
      tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

      <TextView
          android:id="@+id/asigText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Asignatura: "
          android:textSize="20dp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/asigSet"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="TextView"
          android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

      <TextView
          android:id="@+id/fechaText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Fecha de entrega: "
          android:textSize="20dp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/fechaSet"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="TextView"
          android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

      <TextView
          android:id="@+id/imporText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Importancia: "
          android:textSize="20dp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/imporSet"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="TextView"
          android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

      <TextView
          android:id="@+id/porText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Porcentaje: "
          android:textSize="20dp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/porSet"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="TextView"
          android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

      <TextView
          android:id="@+id/statText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Estado: "
          android:textSize="20dp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/statSet"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="TextView"
          android:textSize="20dp" />
    </LinearLayout>


  </LinearLayout>

  <Button
      android:id="@+id/buttonBack"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Volver"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.049"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
      app:layout_constraintVertical_bias="0.944"></Button>

  <Button
      android:id="@+id/buttonEdit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Editar"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.95"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
      app:layout_constraintVertical_bias="0.944"></Button>
</androidx.constraintlayout.widget.ConstraintLayout>